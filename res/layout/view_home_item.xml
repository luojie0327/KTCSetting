<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="173.3dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/home_item_image_container"
        android:layout_width="173.3dp"
        android:layout_height="173.3dp">

        <ImageView
            android:id="@+id/home_item_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

    <TextView
        android:id="@+id/home_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_item_image_container"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:textColor="@color/colorTextNormal"
        android:textSize="24sp" />

</RelativeLayout>