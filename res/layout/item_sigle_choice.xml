<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="440dp"
    android:layout_height="match_parent"
    android:background="@color/color_common_bg">

    <TextView
        android:id="@+id/mItemNameTv"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:paddingLeft="@dimen/dimen_common_margin"
        android:textColor="@android:color/white"/>

    <RadioButton
        android:id="@+id/mCurRb"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimen_common_margin"
        android:button="@drawable/radio_button_style"/>
</RelativeLayout>