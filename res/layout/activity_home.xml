<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mRootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_common_bg"
    android:orientation="vertical"
    tools:context="com.ktc.debughelper.ui.acty.HomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_home_title_height"
        android:background="@drawable/top_bg">

        <TextView
            android:id="@+id/mHomeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimen_common_margin"
            android:text="@string/str_home_title"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/mHomeAbout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_common_margin"
            android:background="@drawable/text_border_bg"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:paddingLeft="@dimen/dimen_common_margin"
            android:paddingTop="8dp"
            android:paddingRight="@dimen/dimen_common_margin"
            android:paddingBottom="8dp"
            android:text="@string/str_home_about"
            android:textColor="@android:color/white"
            android:textSize="20sp"/>
    </RelativeLayout>

    <com.ktc.debughelper.view.TvScrollView
        android:id="@+id/mHomeContentTsv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.ktc.debughelper.view.TvScrollView>
</LinearLayout>